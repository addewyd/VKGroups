#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import Toolbar kivymd.toolbar.Toolbar
#:import NavDrawer libs.uix.baseclass.navdrawer.NavDrawer
#:import LoadScreen libs.uix.baseclass.loadscreen.LoadScreen
#:import ShowLicense libs.uix.baseclass.license.ShowLicense
#:import UserInfo libs.uix.baseclass.userinfo.UserInfo
#:import NavigationButton libs.uix.baseclass.navbutton.NavigationButton

<StartScreen>
    orientation: 'vertical'

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(5)

            Toolbar:
                id: action_bar
                title: app.title
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                elevation: 10
                md_bg_color: app.theme_cls.primary_color

            ScreenManager:
                id: manager
                transition: NoTransition()

                LoadScreen:
                    id: load_screen

                ShowLicense:
                    id: show_license

                UserInfo:
                    id: user_info

                NavigationButton:
                    id: navigation_button
