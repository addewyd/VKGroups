# Макет для ввода логина и пароля.


<PasswordForm>:
    id: box
    orientation: 'vertical'
    padding: dp(15)
    spacing: dp(10)

    BoxLayout:
        size_hint_y: None
        height: dp(48)
        spacing: dp(10)

        Image:
            source: os.path.join('data', 'images', 'icon.png')
            size_hint: None, None
            size: dp(48), dp(48)

        MDLabel:
            font_style: 'Title'
            theme_text_color: 'Primary'
            text: 'Registration'
            halign: 'left'

    MDTextField:
        id: login
        size_hint: 1, None
        height: dp(48)
        hint_text: app.translation._('Логин')
        password: True
        on_text: app.check_state_fields('login', self.text)

    MDTextField:
        id: password
        size_hint: 1, None
        height: dp(48)
        hint_text: app.translation._('Пароль')
        password: True
        on_text: app.check_state_fields('password', self.text)

    MDTextField:
        id: group_id
        size_hint: 1, None
        height: dp(48)
        hint_text: app.translation._('ID группы ВКонтакте')
        on_text: app.check_state_fields('group', self.text)

    # From libs.uix.dialogs.selection
    Selection:
        callback: app.show_login_and_password
        text: 'View login and password'

    MDRaisedButton:
        id: button_ok
        text: 'OK'
        on_release: root.callback()

    Widget:
